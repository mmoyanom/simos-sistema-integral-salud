<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        
        <shape >
            <solid
                android:color="#EFF2FB" />
            <stroke 
                android:width="1dp"
                android:color="#EFF2FB" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="0dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item >
        <shape >
            <gradient
                android:startColor="#819FF7"
                android:endColor="#5858FA"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#086A87" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="0dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            
        </shape>       
    </item>
</selector>