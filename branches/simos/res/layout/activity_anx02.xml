<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    android:orientation="vertical" android:background="@drawable/login_back">
    
    <!-- Encuesta  -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/container_rounded">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Encuesta"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="@drawable/rounded_label_observaciones"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="  Establecimiento :"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Hospital Militar del Perú Hospital Militar del Perú "
            android:textAppearance="@android:style/TextAppearance.Large"/>  
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="  Fecha :"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="11/06/2013"
            android:textAppearance="@android:style/TextAppearance.Large"/>  
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="  Gestor :"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Jairo García Chirinos"
            android:textAppearance="@android:style/TextAppearance.Large"/>  
        </LinearLayout>
    </LinearLayout>
    
    <!-- Encuestado  -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/container_rounded">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Encuestado"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="@drawable/rounded_label_observaciones"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Spinner
	                android:id="@+id/spinner1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:entries="@array/country_arrays" >
	        </Spinner>
	        <EditText 
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.5"
	        	    android:gravity="center"
	        	    android:hint="Numero de documento">
	        </EditText>   
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView 
        	        android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.5"
        	        android:text="Es asegurado ..."
        	        android:paddingLeft="10dp"
        	        android:textAppearance="@android:style/TextAppearance.Medium"/>
        	<Spinner
	                android:id="@+id/spinner2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:entries="@array/country_arrays" >
	        </Spinner>
        </LinearLayout>
    </LinearLayout>
    
    <!-- Dispensacion  -->
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/container_rounded">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Dispensación"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="@drawable/rounded_label_observaciones"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:text="Medicamentos entregas"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <Spinner
	                android:id="@+id/spinner3"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:entries="@array/country_arrays" >
	        </Spinner>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:text="Insumos entregados"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <Spinner
	                android:id="@+id/spinner4"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:entries="@array/country_arrays" >
	        </Spinner>  
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:text="Recetas entregadas"
            android:textAppearance="@android:style/TextAppearance.Large"/>
	        <Spinner
	                android:id="@+id/spinner4"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.5"
	                android:entries="@array/country_arrays" >
	        </Spinner>  
        </LinearLayout>
    </LinearLayout>

    <!-- Observaciones --> 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/container_rounded">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Obsevaciones"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:background="@drawable/rounded_label_observaciones"/>
        <EditText 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textarea"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
    </LinearLayout>
    
    <!-- <Button
        android:id="@+id/btn_take_picture"
        style="@style/button_style_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button_firma_red"
        android:text="Foto" />    
        
    <Button
        style="@style/button_style_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button_firma_red"
        android:text="Firma" />-->
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Guardar"
        style="@style/button_style_02"
        android:background="@drawable/rounded_login_button"/>
</LinearLayout>
</ScrollView>