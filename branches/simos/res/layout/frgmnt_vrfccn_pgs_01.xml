<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/gob.sis.simos"
    android:id="@+id/frmgnt_vrfccn_pgs_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rectangle_section"
    android:orientation="vertical" >
    
    <!-- pregunta 9 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbl_genere" 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="¿Cuenta con boletas?"/>
            <RadioGroup 
                android:id="@+id/rg_have_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">
                <gob.sis.simos.ui.UIRadioButton android:id="@+id/rb_have_tickets_YES" android:text="Si" android:layout_width="wrap_content" 
                    app:preguntaId="9" app:preguntaParentId="7" app:opcionRespuestaId="38"/>
                <View android:layout_width="1dp"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_marginRight="2dp"
			            android:background="#F2F2F2"/>
                <gob.sis.simos.ui.UIRadioButton android:id="@+id/rb_have_tickets_NO" android:text="No" android:layout_width="wrap_content"
                    app:preguntaId="9" app:preguntaParentId="7" app:opcionRespuestaId="39"/>
            </RadioGroup>
        </LinearLayout>
        
        <!-- pregunta 10 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#F2F2F2"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_genere" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="¿Donde realizo los pagos?"/>
            <RadioGroup 
                	android:id="@+id/rg_payment_location"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal">
                <gob.sis.simos.ui.UIRadioButton android:text="Dentro del EESS" 
                    android:textAppearance="@android:style/TextAppearance.Small" 
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    app:preguntaId="10" app:preguntaParentId="7" app:opcionRespuestaId="40"/>
                <View android:layout_width="1dp"
			            android:layout_height="match_parent"
			            android:background="#F2F2F2"/>
                <gob.sis.simos.ui.UIRadioButton android:text="Fuera del EESS"  
                    android:textAppearance="@android:style/TextAppearance.Small"  
                    android:layout_width="0dp"
                    android:layout_weight="0.3" 
                    android:layout_height="wrap_content"
                    app:preguntaId="10" app:preguntaParentId="7" app:opcionRespuestaId="41"/>
                <View android:layout_width="1dp"
			            android:layout_height="match_parent"
			            android:background="#F2F2F2"/>
                <gob.sis.simos.ui.UIRadioButton android:text="Ambos" 
                     android:textAppearance="@android:style/TextAppearance.Small"  
                     android:layout_width="0dp"
                     android:layout_weight="0.3"
                     android:layout_height="wrap_content"
                     app:preguntaId="10" app:preguntaParentId="7" app:opcionRespuestaId="42"/>
            </RadioGroup>
        </LinearLayout>
        
        <!-- pregunta 11 -->
        <LinearLayout 
            android:id="@+id/layout_payment_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="#F2F2F2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="¿Porque pago fuera del \n establecimiento de salud?"/>
            <Spinner
                android:id="@+id/sp_paymentOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <!-- Pregunta 12 -->
        <LinearLayout 
            android:id="@+id/ly_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/btn_rectable_section"
            android:clickable="true"
            android:focusable="true">
         	<View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="#F2F2F2"/>
         	<ImageView
         	    android:layout_width="match_parent"
         	    android:layout_height="0dp"
         	    android:duplicateParentState="true">
         	 </ImageView>
         	    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Boletas entregadas dentro del EESS"/>
            <gob.sis.simos.ui.UITextView
                android:id="@+id/txt_tickets"
                android:gravity="left"
                android:text="No se han ingresado boletas."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:preguntaId="12"/>
        </LinearLayout>
       
        <!-- pregunta 13 -->
        <LinearLayout 
            android:id="@+id/layout_payment_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="#F2F2F2"/>
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingBottom="10dp"
	            android:layout_weight="1"
	            android:focusableInTouchMode="true"
	            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:text="Monto pagado dentro del EESS (S/.)"/>
            <gob.sis.simos.ui.UIEditText
                android:id="@+id/et_ammount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="40.00"
                android:inputType="numberDecimal"
                app:preguntaId="13" app:preguntaParentId="7" app:opcionRespuestaId="56"/>
        </LinearLayout>
        
        <!-- Pregunta 14 -->
        <LinearLayout 
            android:id="@+id/ly_paymentIn14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/btn_rectable_section"
            android:clickable="true"
            android:focusable="true">
         	<View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:background="#F2F2F2"/>
         	<ImageView
         	    android:layout_width="match_parent"
         	    android:layout_height="0dp"
         	    android:duplicateParentState="true">
         	 </ImageView>
         	    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="¿Porque pago dentro del \n establecimiento de salud?"/>
            <gob.sis.simos.ui.UITextView
                android:gravity="left"
                android:text="Ninguno seleccionado"
                android:id="@+id/txt_paymentIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:preguntaId="14"/>
        </LinearLayout>
        </LinearLayout>
        
        <!-- Pregunta 15 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#F2F2F2"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="¿Es cobro indebido?"/>
            <RadioGroup 
                android:id="@+id/rg_improper_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">
                <gob.sis.simos.ui.UIRadioButton android:text="Si" android:layout_width="wrap_content"
                  app:preguntaId="15" app:preguntaParentId="7" app:opcionRespuestaId="65"  />
                <View android:layout_width="1dp"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_marginRight="2dp"
			            android:background="#F2F2F2"/>
                <gob.sis.simos.ui.UIRadioButton android:text="No" android:layout_width="wrap_content"
                    app:preguntaId="15" app:preguntaParentId="7" app:opcionRespuestaId="66"/>
            </RadioGroup>
        </LinearLayout>
       
 
    </LinearLayout>
</ScrollView>
