<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Annx02Theme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/Annex02ActionBar</item>
    </style>
    
	<style name="login_activity_style">
        <item name="android:background">@drawable/login_back</item>
    </style>
    <style name="edittext">
        <item name="android:typeface">normal</item>
    </style>
    <style name="login_button">
        <item name="android:background">#2A49A5</item>
    </style>
    <style name="settings_label">
        <item name="android:textColor">#EFF2FB</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="annex02_spinner">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="annex02_textfield">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="annex02_switch">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="annex02_title">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="button_style_02">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActivityTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- other activity and action bar styles here -->
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#EFF2FB</item>
    </style>
    
    <style name="Annex02ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/rounded_label_observaciones</item>
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
        <item name="android:textColor">#EFF2FB</item>
        <item name="android:textColorHighlight">#EFF2FB</item>
        <item name="android:textColorHint">#EFF2FB</item>
        <item name="android:textColorLink">#EFF2FB</item>
    </style>
    <style name="titleTextStyle">
        <item name="android:textColor">#A4A4A4</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    
    
    <style name="CustomActionBarTheme"
            parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
           parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:text">Información del encuestado</item>
    </style>

    <style name="TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:text">Información del encuestado</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>